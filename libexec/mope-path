#!/usr/bin/env bash

set -e

if [ -n "$1" ]; then
	MOPE_VERSION="$1"
elif [ -z "$MOPE_VERSION" ]; then
	MOPE_VERSION="$(mope-version)"
fi

MOPE_VERSION_PATH="${HOME}/.mope/versions/${MOPE_VERSION}"
if [ ! -d "$MOPE_VERSION_PATH" ]; then
	echo "mope: version \`${MOPE_VERSION}' not installed" >&2
	exit 1
fi

echo "$MOPE_VERSION_PATH"