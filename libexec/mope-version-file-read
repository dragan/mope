#!/usr/bin/env bash

set -e

[ -n "$MOPE_DEBUG" ] && set -x

VERSION_FILE="$1"

if [ -e "$VERSION_FILE" ]; then
	# Read the first non-whitspace word from
	# the specified version file.
	version=""
	while read -a words; do
		word="${words[0]}"
		if [ -z "$version" ] && [ -n "$word" ]; then
			version="$word"
		fi
	done < <( cat "$VERSION_FILE" && echo )

	if [ -n "$version" ]; then
		echo "$version"
		exit
	fi
fi

exit 1