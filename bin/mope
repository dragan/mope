#!/usr/bin/env bash

MOPE_VERSION="0.1.0"

set -E

command="$1"
if [[ -z "$command" ]]; then
	echo "mope ${MOPE_VERSION}" >&2
else
	command_path="$(command -v "mope-$command" || true)"
	if [ -z "$command_path" ]; then
		echo "mope: no such command \`$command'" >&2
		exit 1
	fi

	shift 1
	exec "$command_path" $*
fi